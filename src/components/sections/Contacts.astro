---
import type { Features } from '~/types';
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import Features2 from '../widgets/Features2.astro';

const { id, isDark = false, classes = {}, bg = await Astro.slots.render('bg') } = Astro.props as Features;
---

<!-- Features2 Widget ************** -->
<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl ${classes?.container ?? ''}`} bg={bg}>
  <Features2
    id="contacts"
    title="Siamo qui per aiutare!"
    items={[
      {
        title: 'Telefono',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: '<a href="mailto:info@syntexgreen.tech">info@syntexgreen.tech</a>',
        // description: 'info@syntexgreen.tech',
        icon: 'tabler:mail',
      },
      {
        title: 'Posizione',
        description: 'Via Campo di Marte, 19, Perugia, 06124',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</WidgetWrapper>
