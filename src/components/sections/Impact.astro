---
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import Headline from '../ui/Headline.astro';
import type { Features } from '../../types';
import Stats from '~/components/widgets/Stats.astro';
import Brands from '~/components/widgets/Brands.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 2,

  defaultIcon,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props as Features;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline} />

  <Stats
    title="L'impatto che abbiamo avuto"
    stats={[
      { title: 'CO2 risparmiata', amount: '182t' },
      { title: 'Percorsi sostenibili', amount: '87' },
      { title: 'User Ratings', amount: '4.8' },
      { title: 'Clienti soddisfatti', amount: '116' },
    ]}
  />
  <!-- Brands Widget ****************** -->

  <Brands
    title="Partnerships & Collaborations"
    subtitle="Noi di Syntex GreenTech crediamo nel potere della collaborazione per promuovere l'innovazione e creare esperienze eccezionali."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
